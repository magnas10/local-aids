/* Professional Insights Section */
.insights-section {
  padding: 100px 20px;
  background: linear-gradient(180deg, #f0f5f5 0%, #f8fafa 100%);
}

.insights-wrapper {
  max-width: 1100px;
  margin: 0 auto;
}

.insights-header {
  text-align: center;
  margin-bottom: 50px;
}

.insights-badge {
  display: inline-block;
  background: linear-gradient(135deg, #e8f8f5, #d4f1ec);
  color: var(--primary);
  padding: 10px 22px;
  border-radius: 30px;
  font-size: 0.9rem;
  font-weight: 600;
  margin-bottom: 20px;
}

.insights-header h2 {
  font-size: 2.8rem;
  font-weight: 800;
  color: #1a1a1a;
  margin: 0 0 15px;
}

.insights-header p {
  color: #666;
  font-size: 1.15rem;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.7;
}

/* Main Stats */
.main-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24px;
  margin-bottom: 45px;
}

.stat-card {
  background: white;
  padding: 30px 24px;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  gap: 14px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  border-color: rgba(26, 143, 136, 0.2);
}

.stat-icon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.4rem;
  flex-shrink: 0;
  align-self: flex-start;
}

.stat-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stat-number {
  font-size: 2.2rem;
  font-weight: 700;
  color: #2c3e50 !important;
  line-height: 1.1;
  letter-spacing: -0.01em;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.stat-label {
  font-size: 0.875rem;
  color: #6b7280 !important;
  text-transform: none;
  letter-spacing: 0.02em;
  font-weight: 500;
  margin-top: 2px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.stat-trend {
  font-size: 0.8rem;
  color: #1a8f88 !important;
  margin-top: 4px;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* Detailed Insights */
.detailed-insights {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25px;
  margin-bottom: 30px;
}

.insight-box {
  background: white;
  padding: 32px;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.insight-box:hover {
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
}

.insight-box h3 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0 0 24px;
  letter-spacing: -0.01em;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* Activity Chart */
.chart-container {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  height: 200px;
  padding-top: 20px;
  gap: 8px;
}

.chart-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  height: 100%;
}

.chart-bar {
  width: 38px;
  background: linear-gradient(180deg, #3b82f6 0%, #1a8f88 100%);
  border-radius: 6px 6px 0 0;
  position: relative;
  transition: all 0.3s ease;
  margin-top: auto;
}

.chart-bar:hover {
  background: linear-gradient(180deg, #60a5fa 0%, #20b2aa 100%);
  transform: scaleY(1.02);
}

.bar-value {
  position: absolute;
  top: -25px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 0.75rem;
  font-weight: 600;
  color: #666;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.chart-bar:hover .bar-value {
  opacity: 1;
}

.bar-label {
  font-size: 0.8rem;
  color: #6b7280;
  margin-top: 10px;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* Top Categories */
.categories-list {
  display: flex;
  flex-direction: column;
  gap: 18px;
}

.category-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.category-rank {
  font-size: 0.8rem;
  font-weight: 600;
  color: #1a8f88;
  width: 28px;
  background: #e0f2f1;
  border-radius: 6px;
  padding: 4px 6px;
  text-align: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.category-name {
  flex: 1;
  font-size: 0.9rem;
  color: #2c3e50;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.category-count {
  font-size: 0.85rem;
  color: #6b7280;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.category-bar-bg {
  height: 8px;
  background: #e5e7eb;
  border-radius: 8px;
  overflow: hidden;
}

.category-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6 0%, #1a8f88 100%);
  border-radius: 8px;
  transition: width 0.5s ease;
}

/* Live Feed */
.live-feed {
  background: white;
  padding: 28px 32px;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(0, 0, 0, 0.06);
}

.live-indicator {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 20px;
  font-size: 0.9rem;
  color: #2c3e50;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.pulse {
  width: 10px;
  height: 10px;
  background: #e74c3c;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(1.2); }
}

.feed-items {
  display: flex;
  gap: 30px;
  overflow-x: auto;
  padding-bottom: 5px;
}

.feed-item {
  display: flex;
  align-item2px 18px;
  background: #f9fafb;
  border-radius: 10px;
  font-size: 0.875rem;
  color: #4bs: center;
  gap: 12px;
  flex-shrink: 0;
  padding: 15563;
  border: 1px solid #e5e7eb;
  transition: all 0.2s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.feed-item:hover {
  background: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  border-color: #d1d5db;
}

.feed-icon {
  font-size: 1.3rem;
}

.feed-item strong {
  color: #1a8f88;
  font-weight: 600;
}

.feed-time {
  font-size: 0.7rem;
  color: #94a3b8;
  margin-left: 8px;
  font-weight: 600;
}

/* Responsive */
@media (max-width: 992px) {
  .main-stats {
    grid-template-columns: repeat(2, 1fr);
  }

  .detailed-insights {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .insights-section {
    padding: 60px 20px;
  }

  .insights-header h2 {
    font-size: 2.2rem;
  }

  .main-stats {
    grid-template-columns: 1fr;
  }

  .stat-card {
    padding: 20px;
  }

  .chart-bar {
    width: 25px;
  }

  .feed-items {
    flex-direction: column;
    gap: 12px;
  }
}

@media (max-width: 480px) {
  .insights-header h2 {
    font-size: 1.8rem;
  }

  .chart-container {
    height: 150px;
  }
}
